<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.javanaitei.phoneshop.entity">
	<class name="Product" table="product">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="native"></generator>
		</id>

		<property name="name" column="name" type="java.lang.String"></property>
		<property name="price" column="price" type="float"></property>
		<property name="sale" column="sale" type="float"></property>
		<property name="image" column="image_url"
			type="java.lang.String"></property>
		<property name="images" column="image_list"
			type="java.lang.String"></property>
		<property name="consists" column="consists"
			type="java.lang.String"></property>
		<property name="gifts" column="gifts" type="java.lang.String"></property>
		<property name="description" column="description"
			type="java.lang.String"></property>
		<property name="amount" column="amount"
			type="java.lang.Integer"></property>
		<list name="specifications" lazy="true" inverse="true">
			<key column="product_id" />
			<list-index column="id" base="1" />
			<one-to-many
				class="Specifications" />
		</list>
		<list name="reviews" lazy="true" inverse="true">
			<key column="product_id" />
			<list-index column="id" base="1" />
			<one-to-many
				class="Reviews" />
		</list>
		<many-to-one name="category"
			class="Category" column="category_id"
			not-null="true" />
		<many-to-one name="brand"
			class="Brand" column="brand_id"
			not-null="true" />
	</class>

</hibernate-mapping>