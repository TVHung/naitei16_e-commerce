<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.javanaitei.phoneshop.entity">
	<class name="OrderDetails" table="order_details">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="native"></generator>
		</id>

		<property name="price" column="price" type="float"></property>
		<property name="amount" column="amount" type="java.lang.Integer"></property>
		<many-to-one name="product"
			class="Product" column="product_id"
			not-null="true" />
		<many-to-one name="order"
			class="Order" column="order_id"
			not-null="true" />
	</class>

</hibernate-mapping>