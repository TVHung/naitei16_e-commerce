<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.javanaitei.phoneshop.entity">
	<class name="Reviews" table="reviews">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="native"></generator>
		</id>

		<property name="content" column="content" type="java.lang.String"></property>
		<property name="amount" column="amount" type="java.lang.Integer"></property>
		<many-to-one name="product"
			class="Product" column="product_id"
			not-null="true" />
		<many-to-one name="user"
			class="User" column="user_id"
			not-null="true" />
	</class>

</hibernate-mapping>